{
    "app-id": "org.free_astro.siril",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "siril",
    "rename-icon": "siril",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        /* Needed for gvfs to work */
        "--talk-name=org.gtk.vfs", "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name": "cfitsio",
            "make-args": ["shared"],
            "cleanup": [
                "/include",
                "/lib/*.a",
                "/lib/*.la",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://heasarc.gsfc.nasa.gov/FTP/software/fitsio/c/cfitsio-3.48.tar.gz",
                    "sha256": "91b48ffef544eb8ea3908543052331072c99bf09ceb139cb3c6977fc3e47aac1"
                }
            ]
        },
        {
            "name": "gsl",
            "config-opts": [
                "--enable-shared",
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://mirror.sergal.org/gnu/gsl/gsl-2.6.tar.gz",
                    "sha256": "b782339fc7a38fe17689cb39966c4d821236c28018b6593ddb6fd59ee40786a8"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/lib/*.a",
                "/lib/*.la",
                "/share/aclocal",
                "/share/info",
                "/share/man"
            ]
        },
        {
            "name": "fftw3",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-float",
                "--enable-threads",
                "--enable-openmp",
                "--disable-fortran"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://fftw.org/fftw-3.3.8.tar.gz",
                    "sha256": "6113262f6e92c5bd474f2875fa1b01054c4ad5040f6b0da7c03c98821d9ae303"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/*.a",
                "/lib/*.la",
                "/lib/cmake",
                "/lib/pkgconfig",
                "/share/info",
                "/share/man"
            ]
        },
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig"
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RELEASE",
                "-DBUILD_EXAMPLES=OFF",
                "-DOPENCV_GENERATE_PKGCONFIG=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv/archive/4.4.0.zip",
                    "sha256": "7faa0991c74cda52313ee37ef73f3e451332a47e7aa36c2bb2240b69f5002d27"
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/cmake",
                "/lib/pkgconfig",
                "/lib/*.a",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.exiv2.org/builds/exiv2-0.27.2-Source.tar.gz",
                    "sha256": "2652f56b912711327baff6dc0c90960818211cf7ab79bb5e1eb59320b78d153f"
                }
            ]
        },
        {
            "name": "libraw",
            "config-opts": [ "--disable-examples", "--disable-static" ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/lib/*.la",
                "/share/doc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url" : "https://www.libraw.org/data/LibRaw-0.20.0.tar.gz",
                    "sha256" : "1f0a383da2ce9f409087facd28261decbf6be72cc90c78cd003b0766e4d694a3"
                }
            ]
        },
        {
            "name": "libconfig",
            "config-opts": [
                "--disable-static",
                "--enable-shared"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://hyperrealm.github.io/libconfig/dist/libconfig-1.7.2.tar.gz",
                    "sha256": "7c3c7a9c73ff3302084386e96f903eb62ce06953bb1666235fac74363a16fad9"
                }
            ],
            "cleanup": [
                "/include",
                "*.la",
                "*.a",
                "/lib/cmake",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "ffms2",
            "config-opts": [
                "--with-pic",
                "--disable-static",
                "--enable-shared"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FFMS/ffms2/archive/2.23.tar.gz",
                    "sha256": "b09b2aa2b1c6f87f94a0a0dd8284b3c791cbe77f0f3df57af99ddebcd15273ed"
                }
            ]
        },
        {
            "name" : "libheif",
            "config-opts": [ "--disable-gdk-pixbuf" ],
            "cleanup": [ "/bin" ],
            "modules": [
                {
                    "name": "libde265",
                    "config-opts": [ "--disable-sherlock265" ],
                    "cleanup": [ "/bin" ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/strukturag/libde265/releases/download/v1.0.3/libde265-1.0.3.tar.gz",
                            "sha256": "e4206185a7c67d3b797d6537df8dcaa6e5fd5a5f93bd14e65a755c33cd645f7a"
                        }
                    ]
                }
            ],
            "sources" : [
                {
                    "url" : "https://github.com/strukturag/libheif/releases/download/v1.4.0/libheif-1.4.0.tar.gz",
                    "sha256" : "977a9831f1d61b5005566945c7e16e31de35a57a8dd6eb715ae0f40a3595cb60",
                    "type" : "archive"
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "siril",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/free-astro/siril.git",
                    "tag": "0.99.4",
                    "commit": "19fa98070546d0f331264226d9794940f4a7c51b"
                }
            ]
        }
    ]
}
